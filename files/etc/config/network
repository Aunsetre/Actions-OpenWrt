config interface 'loopback'
        option ifname   'lo'
        option proto    'static'
        option ipaddr   '127.0.0.1'
        option netmask  '255.0.0.0'

config interface 'wan'
    option ifname   'eth0'
    option proto    'static'
    option ipaddr   '107.173.149.111'
    option gateway  '107.173.149.1'
    option netmask  '255.255.255.0'
    list dns        '8.8.8.8'

config interface 'lan'
        option type     'bridge'
        option ifname   'eth0'
        option proto    'static'
        option ipaddr   '192.168.1.1'
        option netmask  '255.255.255.0'
        option ip6assign '60'
